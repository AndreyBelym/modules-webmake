#!/usr/bin/env node

'use strict';

var argv = require('optimist')
	.usage("Usage: $0 <options> <input> <output>")
	.boolean('sourcemap')
	.describe('sourcemap', "Source map")
	.demand(2).argv
  , normalize = require('path').normalize
  , writeFile = require('fs').writeFile
  , webmake   = require('../lib/webmake')

  , input = argv._[0], output = argv._[1];

if (input[0] !== '/') {
	input = normalize(process.cwd() + '/' + input);
}
if (output[0] !== '/') {
	output = normalize(process.cwd() + '/' + output);
}

webmake(input, { output: output, sourceMap: argv.sourcemap },
	function (err, result) {
		if (err) {
			throw err;
		}
		console.log("...Done");
		process.exit();
	});
